{
  "name": "focus-lock-desktop",
  "version": "1.0.0",
  "description": "Desktop app that locks you out of distracting websites and apps during study sessions",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start-simple": "electron simple-main.js",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac --config.mac.identity=null",
    "build-linux": "electron-builder --linux",
    "build-all": "node scripts/build-all.js",
    "dist": "electron-builder --publish=never",
    "dev": "concurrently \"npm run start-web\" \"wait-on http://localhost:3000 && electron .\"",
    "start-web": "cd .. && npm run dev",
    "deploy": "node scripts/deploy.js",
    "deploy-github": "node scripts/deploy.js --github",
    "deploy-firebase": "node scripts/deploy.js --firebase",
    "deploy-s3": "node scripts/deploy.js --s3",
    "quick-deploy": "./scripts/quick-deploy.sh",
    "test-deployment": "node scripts/test-deployment.js",
    "setup": "./setup.sh",
    "clean": "rm -rf dist temp out",
    "postinstall": "node scripts/postinstall.js"
  },
  "keywords": ["productivity", "focus", "study", "blocker", "electron"],
  "author": "Mohammad Alhait",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "node-cron": "^3.0.3",
    "systeminformation": "^5.21.15"
  },
  "build": {
    "appId": "com.mohammad.focus-lock",
    "productName": "Focus Lock",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
